{
    "variables": {
        "version": "0.0.1",
        "client_id": "{{env `ARM_CLIENT_ID`}}",
        "client_secret": "{{env `ARM_CLIENT_SECRET`}}",
        "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
        "tenant_id": "{{env `ARM_TENANT_ID`}}",
        "ssh_public_key": "{{env `ARM_SSH_KEY`}}",
        "ssh_user": "centos_prov",
        "ssh_pass": "{{env `ARM_SSH_PASS`}}"
    },
    "builders": [
        {
            "type": "azure-arm",
            "client_id": "{{user `client_id`}}",
            "client_secret": "{{user `client_secret`}}",
            "subscription_id": "{{user `subscription_id`}}",
            "tenant_id": "{{user `tenant_id`}}",
            "managed_image_resource_group_name": "service-nexus-westus2-dev",
            "managed_image_name": "myTestImage-{{user `version`}}",
            "ssh_username": "{{user `ssh_user`}}",
            "ssh_password": "{{user `ssh_pass`}}",
            "os_type": "Linux",
            "image_publisher": "OpenLogic",
            "image_offer": "CentOS",
            "image_sku": "7.7",
            "image_version": "latest",
            "ssh_pty": "true",
            "azure_tags": {
                "owner": "derek.burdick@genesys.com",
                "task": "Image deployment"
            },
            "location": "West US 2",
            "vm_size": "Standard_D4s_v3",
            "async_resourcegroup_delete": true,
            "shared_image_gallery_destination": {
                "resource_group": "group-gallery-dev",
                "gallery_name": "core_dev_gallery",
                "image_name": "dev-jumphost",
                "image_version": "{{user `version`}}",
                "replication_regions": [
                    "southeastasia"
                ]
            },
            "shared_image_gallery_timeout": "4h"
        }
    ],
    "provisioners": [
        {
            "execute_command": "echo '{{user `ssh_pass`}}' | {{ .Vars }} sudo -S -E sh '{{ .Path }}'",
            "inline": [
                "yum update -y",
                "yum install -y curl wget",
                "echo 'wget version:'",
                "wget -V",
                "echo 'Curl Version:'",
                "curl -V",
                "echo '%sudo    ALL=(ALL)  NOPASSWD:ALL' >> /etc/sudoers",
                "echo '{{user `version`}}' > /etc/image-version"
            ],
            "inline_shebang": "/bin/sh -x",
            "type": "shell"
        }
    ]
}
